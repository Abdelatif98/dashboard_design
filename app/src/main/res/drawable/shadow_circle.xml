<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/shadow"
                        android:endColor="@color/shadow"

                        android:gradientRadius="40dp"
                        android:type="radial"
                        />
                </shape>
            </item>
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
                <shape android:shape="oval">
                    <size android:width="39.5dp"
                        android:height="39.5dp"/>
                    <solid android:color="@android:color/white" />
                </shape>
            </item>


        </layer-list>
    </item>

</selector>